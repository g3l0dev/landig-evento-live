---
import { Icon } from "astro-icon/components";
---

<style>
  .container {
    display: flex;
    flex-flow: row;
    column-gap: 1rem;
    background-color: rgba(0, 0, 0, 50%);
    padding: 0.5rem 1rem;
    border-radius: 0.75rem;
    max-width: max-content;
    color: white;
    margin-block: 1rem;
  }
  .container .data {
    display: flex;
    flex-flow: row;
    align-items: center;
    column-gap: 1rem;
  }
  .container .data-time {
    display: flex;
    flex-flow: row;
    align-items: center;
    column-gap: 1rem;
  }
  .container .haor {
      display: flex;
      flex-flow: column;
      align-items: center;
      justify-content: center;
    }
  .icon {
    font-size: 2.5rem;
    color: var(--verde-planta);
  }
</style>

<div class="container">
  <div class="data">
    <Icon name="calendar" class="icon" />
    <p>21 Nov</p>
  </div>
  <div class="data-time">
    <Icon name="time" class="icon" />
    <div class="haor">
      <p>6:00</p>
      <small>PM MEX</small>
    </div>
    <span>-</span>
    <div class="haor">
      <p>7:00</p>
      <p><small>PM ECU</small></p>
    </div>
  </div>
</div>
