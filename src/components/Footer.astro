---
const year = new Date().getFullYear();

import Xkale from "@assets/logo-xkale.svg";
import Genesys from "@assets/logo-genesys.svg";
import Linkedin from "@assets/icons/linkedin.svg";
import Instagram from "@assets/icons/instagram.svg";
import YouTube from "@assets/icons/youtube.svg";
---

<div
  class="top-0 left-0 w-full h-[50px] bg-[url('/footer.avif')] bg-cover bg-no-repeat"
>
</div>
<footer class="bg-black-xkale relative">
  <div
    class="container p-4 mx-auto sm:px-6 md:px-8 lg:px-20 xl:px-32 2xl:px-48"
  >
    <div
      class="grid grid-cols-1 md:grid-cols-3 gap-4 place-content-center place-items-center"
    >
      <Xkale class="h-20 fill-verde-xkale" />
      <Genesys class="h-9" />

      <div class="flex justify-center items-center gap-2">
        <a
          href="https://www.linkedin.com/company/xkaletm"
          target="_blank"
          rel="noopener noreferrer"
        >
          <Linkedin class="size-6 fill-white-xkale" />
        </a>
        <a
          href="https://www.instagram.com/xkaletm"
          target="_blank"
          rel="noopener noreferrer"
        >
          <Instagram class="size-6 fill-white-xkale" />
        </a>
        <a
          href="https://www.youtube.com/@xkale_"
          target="_blank"
          rel="noopener noreferrer"
        >
          <YouTube class="size-6 text-white-xkale" />
        </a>
      </div>
    </div>
    <hr />
    <p class="text-center text-white-xkale">
      <small>&copy; 2024-{year} Xkale. Todos los derechos reservados.</small>
    </p>
  </div>
</footer>
